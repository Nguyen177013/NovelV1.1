@model NovelV1._1.Models.DTO.TaiKhoan
@{
    ViewBag.Title = "Log in";
}
<style>
    #main-header,
    #main-footer,
    #myBtn {
        display: none;
    }

    input {
        padding: 1.4rem;
        border: 1.5px solid #afafaf;
        border-radius: 0.4rem;
    }
</style>
<div class="modal-Login-dialog">
    <div class="modal-Login">
        <div class="modal-container">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <header class="modal-header">
                    Đăng Nhập
                </header>
                <div class="modal-body">
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10" style="text-align:center;color:red;font-size:1.2rem;font-weight:bold;">
                            <label>@ViewBag.Notification</label>
                        </div>
                    </div>
                    <div class="container-login">
                        <div class="input-container">
                            @Html.EditorFor(model => model.TaiKhoan_tenDN, new { htmlAttributes = new { @placeholder = "Tài Khoản" } })
                            @Html.ValidationMessageFor(model => model.TaiKhoan_tenDN, "", new { @class = "text-danger" })
                        </div>
                        <div class="input-container">
                            @Html.EditorFor(model => model.TaiKhoan_matKhau, new { htmlAttributes = new { @placeholder = "Mật Khẩu" } })
                            @Html.ValidationMessageFor(model => model.TaiKhoan_matKhau, "", new { @class = "text-danger" })
                        </div>
                        <div class="modal-register" style="float:left;">
                            <a href="@Url.Action("ResetPassword","TaiKhoan",new { email = ""})" class="Register">Quên Mật Khẩu</a>
                        </div>
                        <div class="container-login-btn">
                            <button class="btn-submit">
                                Đăng Nhập
                            </button>
                        </div>
                    </div>
                </div>
                <div class="modal-register">
                    <p class="request-Register">Bạn chưa có tài khoản ? <a href="@Url.Action("DangKy","TaiKhoan")" class="Register">Đăng Ký</a></p>
                </div>
                <br />
                <div class="modal-register">
                    <p class="request-Register">
                        <a href="/TaiKhoan/DangNhapFacebook" class="fb btn">
                            <i class="fa-brands fa-facebook-square"></i> Login with Facebook
                        </a>
                    </p>
                </div>
            }
        </div>
    </div>
</div>
<style>
    .fb {
        background-color: #3B5998;
        color: white;
        padding: 1rem;
        text-decoration: none;
    }
</style>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
