@model NovelV1._1.Models.DTO.NoiDungSach

@{
    ViewBag.Title = "Create_NoiDung";
    Layout = "~/Areas/Host/Views/Shared/_Layout.cshtml";
}

<div class="modal-Create-dialog">
    <div class="modal-Create" >
        <div class="modal-container">
            <header class="modal-header">
                Thêm Tập
            </header>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Sach_ma)

                <div class="modal-body">
                    <div class="input-container">
                        <label class="control-label" for="">Số Tập</label>
                        @Html.EditorFor(model => model.NoiDungSach_Tap, new { htmlAttributes = new { @class = "modal-input" } })
                        @Html.ValidationMessageFor(model => model.NoiDungSach_Tap, "", new { @style = "color:red;" })
                    </div>
                    <div class="input-container">
                        <label class="control-label" for="">Nội Dung</label>
                        @Html.TextAreaFor(model => model.NoiDungSach_NoiDung, new { htmlAttributes = new { @class = "text-Synopsis" } })
                        @Html.ValidationMessageFor(model => model.NoiDungSach_NoiDung, "", new { @style = "color:red;" })
                    </div>
                    <div class="container-login-btn">
                        <button class="btn-submit" value="Save">
                            Thêm
                        </button>
                    </div>
                </div>
                <div class="right">
                    @Html.ActionLink("Quay Về", "listSach", "Admin", new { @class = "btn-select primary-text" })
                </div>
            }
        </div>
    </div>

</div>